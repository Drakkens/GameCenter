<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".Classes.GameCenter.SplashScreen">

    <ImageView
            android:layout_width="224dp"
            android:layout_height="352dp"
            app:srcCompat="@drawable/splash"
            android:id="@+id/splash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Splash!"
           />

    <TextView
            android:text="Infinity Dragons"
            android:layout_width="193dp"
            android:layout_height="120dp"
            android:id="@+id/infinityDragons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="monospace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/splash"
            app:layout_constraintVertical_bias="0.871" />

    <TextView
            android:text="Studios"
            android:layout_width="193dp"
            android:layout_height="120dp"
            android:id="@+id/studios"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="56dp" />
</androidx.constraintlayout.widget.ConstraintLayout>